{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd nextjs_space && npm install && npx prisma generate && npx prisma db push && npm run build",
        "watchPatterns": [
            "nextjs_space/**"
        ]
    },
    "deploy": {
        "startCommand": "cd nextjs_space && npm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}