{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "nextjs_space/**"
        ]
    },
    "deploy": {
        "startCommand": "cd nextjs_space 2>/dev/null || true; npm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}